{
    "name": "rvwoens/geometry",
    "description": "Geometry 2D shapes helper functions",
    "type": "library",
    "require": {
        "php": "^7.1||^8",
        "phpmd/phpmd": "^2.8"
    },
    "require-dev": {
        "phpunit/phpunit":  "^9.5.10",
        "friendsofphp/php-cs-fixer": "^3.49"
    },
    "license": "MIT",
    "keywords": [
        "library",
        "geometry"
    ],
    "authors": [
        {
            "name": "Ronald van Woensel",
            "email": "rvw@cosninix.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Rvwoens\\Geometry\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rvwoens\\Geometry\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "fix": "vendor/bin/php-cs-fixer fix -v",
        "smell": "vendor/bin/phpmd src text phpmd-rules.xml"
    }
}
