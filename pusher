LASTTAG=`git describe --abbrev=0 --tags`
echo "Current version tag $LASTTAG"
if [ -z $1 ]; then
	NEWTAG=`newversion -x $LASTTAG`
else
	echo "Use version format vX.X.X"
	echo "Use git tag -d <tag> to delete local tag"
	echo "Use git push --delete origin <tag> to delete remote tag"
	NEWTAG=$1
fi
echo "Creating new version tag $NEWTAG"
echo "<?php\n\t// auto-generated by pusher\n\n\treturn [\n\t\t'version'=>'$NEWTAG'\n\t]; " > ./src/version.php
git add --all .
git commit -a -m "Release $NEWTAG"
git tag "$NEWTAG"
echo ">>>> git push origin"
git push origin
echo -e ">>>> git push origin --tags "
git push origin --tags

