LASTTAG=`git describe --abbrev=0 --tags`
echo "Current version tag $LASTTAG"
if [ -z $1 ]; then
	NEWTAG=`newversion -x $LASTTAG`
else
	NEWTAG=$1
fi
echo "Creating new version tag v$NEWTAG"
echo "<?php\n\t// auto-generated by pusher\n\n\treturn [\n\t\t'version'=>'v$NEWTAG'\n\t]; " > ./src/version.php
git add --all .
git commit -a -m "Release v$NEWTAG"
git tag "v$NEWTAG"
echo ">>>> git push origin"
git push origin
echo -e ">>>> git push origin --tags "
git push origin --tags

